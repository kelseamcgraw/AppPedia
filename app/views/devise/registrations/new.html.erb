<div class="container">
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <form class="form-signin">
    <h2 class="form-signin-heading">Join AppPedia Today.</h2>
    <label for="inputPassword" class="sr-only">Full Name</label>
    <input type="name" id="inputName" class="form-control" placeholder="Full name" required>
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
    <%= f.label :password, class: "sr-only" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
      
      
    <div class="checkbox">
      <label>
        <input type="checkbox" value="remember-me"> Send me emails about new apps.
      </label>
    </div>
      <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
    <p>Already have an account? <a href="/pages/login">Login Â»</a></p>
  </form>
    <% end %>

<%= render "devise/shared/links" %>

</div> <!-- /container -->
