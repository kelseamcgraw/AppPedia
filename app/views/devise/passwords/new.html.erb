<script type="text/javascript">
document.getElementById("other")
    .addEventListener("keyup", function(event) {
    event.preventDefault();
    if (event.keyCode === 13) {
        document.getElementById("thing").click();
    }
});
  function myfunction() {
  alert("Great! We will be sending an email to you shortly, and you can follow the instructions. While you wait, go back home");
  window.location.href = '/applications#index'
  //echo <a href='google.com'>test</a>
}  
</script>
<div class="container">

  <form class="form-signin">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
      
    <h2 class="form-signin-heading">Forgot your password?</h2>
    <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, class: "form-control",id:'other' ,placeholder: "Email Address" %>
      <br/>
      <button class="btn btn-lg btn-primary btn-block" type="button" id='thing' onclick='myfunction()'>Reset Password</button>
      <p><%= render "devise/shared/links" %></p>
      
      <% end %>
  </form>

</div> <!-- /container -->
