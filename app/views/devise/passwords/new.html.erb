<div class="container">

  <form class="form-signin">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
      
    <h2 class="form-signin-heading">Forgot your password?</h2>
    <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address" %>
      <br/>
      <%= f.submit "Reset password", class: "btn btn-lg btn-primary btn-block" %>
      <p><%= render "devise/shared/links" %></p>
      
      <% end %>
  </form>

</div> <!-- /container -->
